<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_Song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UTA Radio is an alternative/indie rock college radio station base at The University of Texas at Arlington. The sstation is an online radio operation run primairly by students with the help of faculty and staff members from the Department of Communications. Its slogan is Online All The Time."
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
